@model Employee

<h1>Employee Details</h1>

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.ID</h6>
        <h5 class="card-text">@Model.DateOfBirth</h5>
        <h5 class="card-text">@Model.Email</h5>
        <h5 class="card-text">@Model.Phone</h5>
        <h5 class="card-text">@Model.Department.Name</h5>
        <a asp-controller="Employee" asp-action="ViewAllEmployees" class="card-link">Back to list</a>
    </div>
</div>
